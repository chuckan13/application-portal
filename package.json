{
  "name": "app-portal",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node ./server/bin/www",
    "dev": "concurrently \"yarn run server\" \"yarn run client\"",
    "prod": "yarn run heroku-postbuild && yarn start",
    "server": "./node_modules/.bin/nodemon --watch ./server ./server/bin/www",
    "client": "cd client && yarn start",
    "heroku-postbuild": "cd client && yarn install && yarn run build"
  },
  "dependencies": {
    "body-parser": "~1.18.2",
    "cookie-parser": "~1.4.3",
    "debug": "~2.6.9",
    "express": "~4.15.5",
    "jade": "~1.11.0",
    "morgan": "~1.9.0",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "serve-favicon": "~2.4.5"
  },
  "devDependencies": {
    "concurrently": "^3.5.1",
    "nodemon": "^1.17.2"
  }
}
